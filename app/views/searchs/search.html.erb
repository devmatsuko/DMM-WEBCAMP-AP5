<h2><%= @model %> search for "<%= @content %>"</h2>
<% if @datas.present? %>
    <table class="table table-hover table-inverse">
        <% if @model == "User" %>
        	<thead>
        		<tr>
        			<th>User Image</th>
        			<th>Name</th>
        			<th colspan="3"></th>
        		</tr>
        	</thead>
        	<tbody>
        		<% @datas.each do |data| %>
    				<tr>
    					<td><%= attachment_image_tag(data, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
    					<td><%= data.name %></td>
    					<!--follows-->
    					<td>フォロー数：<%= data.following.count %></td>
    					<!--followers-->
    					<td>フォロワー数：<%= data.followers.count %></td>
    					<td><%= link_to "Show", user_path(data), class: "user_#{data.id}" %></td>
    				</tr>
    			<% end %>
        	</tbody>
    	<% else %>
    	    <thead>
        		<tr>
        			<th>User Image</th>
        			<th>Title</th>
        			<th>Opinion</th>
        			<th colspan="1"></th>
        		</tr>
        	</thead>
        
        	<tbody>
        		<% @datas.each do |data| %>
    				<tr>
    					<td><%= attachment_image_tag(data.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
    					<td><%= data.title %></td>
    					<td><%= data.body %></td>
    					<td><%= link_to "Show", book_path(data), class: "book_#{data.id}" %></td>
    				</tr>
    			<% end %>
        	</tbody>
        <% end %>
    </table>
<% else %>
    <p>ユーザはいません。</p>
<% end %>